<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="68dp">


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="70dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/tv_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_logo"
        android:layout_toEndOf="@+id/iv_logo"
        android:text="您于2018年5月20日交易成功两个订单"
        android:textColor="@color/drop_down_unselected" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_intro"
        android:layout_toEndOf="@+id/iv_logo"
        android:text="时间："
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_specific_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_intro"
        android:layout_toEndOf="@+id/tv_time"
        android:text="2018年5月下午15点"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time"
        android:layout_toEndOf="@+id/iv_logo"
        android:text="快递类型："
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_specific_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_type"
        android:layout_toEndOf="@+id/tv_type"
        android:text="顺丰快递"
        android:textSize="12sp"/>

</RelativeLayout>